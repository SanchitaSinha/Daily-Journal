<%- include("partials/header"); -%>

<h1><%=title%></h1>
<div class="spacing"></div>
<p class="post-content"><%=content%></p>

<form class="edit-post" action="/edit-post" method="post">
  <input type="hidden" name="postId" value="<%=id%>">
  <button class="btn btn-outline-primary btn-sm" type="submit" name="submit">Edit</button>
</form>

<form class="delete-post" action="/delete-post" method="post">
  <input type="hidden" name="postId" value="<%=id%>">
  <button class="btn btn-danger btn-sm" type="submit" name="submit" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
</form>

<%- include("partials/footer"); -%>
